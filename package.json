{
  "name": "@nuware/functions",
  "version": "0.1.7",
  "description": "Useful functions",
  "main": "dist/index.js",
  "module": "es/index.js",
  "files": [
    "dist",
    "es"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuware/functions.git"
  },
  "scripts": {
    "clean": "rimraf dist es",
    "lint": "eslint src/index.js",
    "build:es": "rollup -f esm -i src/index.js -o es/index.js",
    "build:umd": "rollup -f umd -i src/index.js -o dist/index.js -n F",
    "build": "npm run build:es && npm run build:umd",
    "release": "npm run clean && npm run lint && npm run build"
  },
  "author": "Dmitry Dudin <dima@nuware.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuware/functions/issues"
  },
  "devDependencies": {
    "eslint": "^5.2.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "rollup": "^0.63.4"
  },
  "eslintConfig": {
    "extends": "standard"
  }
}
